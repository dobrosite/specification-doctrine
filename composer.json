{
    "name": "dobrosite/specification-doctrine",
    "description": "Specification support for Doctrine",
    "type": "library",
    "keywords": [
        "doctrine",
        "spec",
        "specification"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Михаил Красильников",
            "email": "m.krasilniov@dobro.site"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.2",
        "dobrosite/specification": "^2.4",
        "doctrine/orm": "^2.7"
    },
    "require-dev": {
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "phpstan/extension-installer": "^1.0.4",
        "phpstan/phpstan": "^0.12.34",
        "phpstan/phpstan-phpunit": "^0.12.15",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "DobroSite\\Specification\\Doctrine\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DobroSite\\Specification\\Doctrine\\Examples\\": "examples",
            "DobroSite\\Specification\\Doctrine\\Tests\\": "tests"
        }
    }
}
